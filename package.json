{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:jest && npm run test:mocha",
    "test:jest": "jest __tests__/jest",
    "test:mocha": "mocha __tests__/mocha/*.test.js",
    "test:jest-coverage": "jest --coverage --coverageDirectory=coverage/jest",
    "test:mocha-coverage": "nyc mocha __tests__/mocha/*.test.js",
    "merge-coverage": "npx lcov-result-merger 'coverage/**/lcov.info' > coverage/combined-lcov.info",
    "generate-coverage-report": "genhtml coverage/combined-lcov.info --output-directory coverage/html"
  },
  "nyc": {
    "include": [
      "src/add.js",
      "src/reduce.js"
    ],
    "exclude": [
      "**/*.test.js",
      "node_modules",
      "coverage"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "extension": [".js"],
    "report-dir": "./coverage/mocha",
    "all": true
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.x",
    "@babel/preset-env": "^7.x",
    "babel-jest": "^29.x",
    "chai": "^5.1.2",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0"
  }
}
